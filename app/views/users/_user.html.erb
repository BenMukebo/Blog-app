<%= link_to  user_path(user) do %> 
   
  <div class="user d-flex">
    <div class="photo">
			<img src="<%= user.photo %>" alt="User_Photo">
    </div>
    <div class="details">
      <h2 class="name"><%= user.name %></h2>
      <span class="sub">Number of posts : <%= user.posts_counter %></span>

    </div>
  </div>
<% end %>